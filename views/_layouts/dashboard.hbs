<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>{{PageTitle}}</title>
    <!-- Custom fonts for this template-->
    <link rel="icon" href="/img/core-img/favicon.ico">
    <link href="/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="/css/dashboard-style.min.css" rel="stylesheet">
    {{{_sections.css}}}
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/">
                <img src="/img/core-img/logo-white.png" style="max-width:50px">
            </a>
            <!-- Divider -->
            <hr class="sidebar-divider my-0">
            <li class="nav-item">
                <span class="nav-link text-center">{{accountName}}<br />
                    <div style="font-weight:200; text-transform: capitialize">{{UserRoleTitle}}</div>
                </span>
            </li>
            <!-- Divider -->
            <hr class="sidebar-divider my-0">
            <!-- Nav Item - Dashboard -->
            {{#ifEquals UserPermission 'writer'}}
            <li class="nav-item">
                <a class="nav-link" href="/writer/postlist/all">
                    <i class="far fa-list-alt"></i>
                    <span>Tất cả bài viết</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/writer/postlist/published">
                    <i class="far fa-newspaper"></i>
                    <span>Đã xuất bản</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/writer/postlist/approved">
                    <i class="far fa-check-circle"></i>
                    <span>Đã duyệt &amp; chờ xuất bản</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/writer/postlist/wait">
                    <i class="far fa-clock"></i>
                    <span>Đang chờ duyệt</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/writer/postlist/denied">
                    <i class="far fa-times-circle"></i>
                    <span>Bị từ chối</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/writer/newpost">
                    <i class="far fa-edit"></i>
                    <span>Viết bài mới</span></a>
            </li>
            <hr class="sidebar-divider my-0">
            {{/ifEquals}}

            {{#ifEquals UserPermission 'editor'}}
            <li class="nav-item">
                <a class="nav-link" href="/editor/postlist">
                    <i class="far fa-times-circle"></i>
                    <span>Danh sách chờ duyệt</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/editor/lastchangedpostlist">
                    <i class="far fa-list-alt"></i>
                    <span>Bài viết xử lý lần cuối</span></a>
            </li>
            <hr class="sidebar-divider my-0">
            {{/ifEquals}}

            {{#ifEquals UserPermission 'admin'}}
            <li class="nav-item">
                <a class="nav-link collapsed" href="/admin/postlist/all" data-toggle="collapse"
                    data-target="#collapsePosts" aria-expanded="true" aria-controls="collapsePosts">
                    <i class="far fa-list-alt"></i>
                    <span>Danh sách bài viết</span>
                </a>
                <div id="collapsePosts" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="/admin/postlist/all"><i class="far fa-list-alt mr-3"></i>Tất cả</a>
                        <a class="collapse-item" href="/admin/postlist/published"><i class="far fa-newspaper mr-3"></i>Đã xuất bản</a>
                        <a class="collapse-item" href="/admin/postlist/approved"><i class="far fa-check-circle mr-3"></i>Đã duyệt </a>
                        <a class="collapse-item" href="/admin/postlist/wait"><i class="far fa-clock mr-3"></i>Đang chờ duyệt</a>
                        <a class="collapse-item" href="/admin/postlist/denied"><i class="far fa-times-circle mr-3"></i>Bị từ chối</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" href=/"admin/accountlist/all" data-toggle="collapse"
                    data-target="#collapseAccounts" aria-expanded="true" aria-controls="collapseAccounts">
                    <i class="fas fa-users"></i>
                    <span>Danh sách người dùng</span>
                </a>
                <div id="collapseAccounts" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" href="/admin/accountlist/all"><i class="fas fa-users mr-3"></i>Tất cả</a>
                        <a class="collapse-item" href="/admin/accountlist/subscriber"><i class="fas fa-book-reader mr-3"></i>Độc giả</a>
                        <a class="collapse-item" href="/admin/accountlist/writer"><i class="fas fa-glasses mr-3"></i>Phóng viên</a>
                        <a class="collapse-item" href="/admin/accountlist/editor"><i class="fas fa-spell-check mr-3"></i>Biên tập viên</a>
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/categorylist">
                    <i class="fas fa-layer-group"></i>
                    <span>Danh sách chuyên mục</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/admin/taglist">
                    <i class="fas fa-tags"></i>
                    <span>Danh sách nhãn </span></a>
            </li>
            <hr class="sidebar-divider my-0">
            {{/ifEquals}}

            <!-- Nav Item - Charts -->
            <li class="nav-item">
                <a class="nav-link" href="/account/details">
                    <i class="fas fa-user-edit"></i>
                    <span>Thông tin cá nhân</span></a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">
            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <ul class="navbar-nav ml-auto">
                        <a href="/account/logout">
                            <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2"></i>
                            Đăng xuất
                        </a>
                    </ul>
                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid min-vh-100">
                    {{{body}}}
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; TNT News 2019</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
 <!-- Bootstrap core JavaScript-->
    <script src="/js/jquery/jquery-2.2.4.min.js"></script>
    <script src="/js/bootstrap/bootstrap.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="/js/jquery/jquery.easing.min.js"></script>
    {{!-- Custom js --}}
    <script src="/js/dashboard.js"></script>
    <script src="/js/plugins/plugins.js"></script>
    {{{_sections.js}}}
</body>

</html>