<div class="m-3">
    <a href="#" class="btn btn-block btn-primary text-white text-uppercase"><i class="fa fa-plus mr-3"></i>Thêm nhãn
        mới</a>
</div>
{{#if pages}}
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-borderless table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Tên nhãn</th>
                        <th>Số bài viết được gán</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each CatInfo}}
                    <tr>
                        <td class="align-middle">{{tag_id}}</td>
                        <td class="align-middle">{{tag_name}}</td>
                        <td class="align-middle">{{tag_count}}</td>
                        <td class="align-middle text-center">
                            <button class="btn btn-md btn-danger m-1">
                                <i class="fa fa-trash mr-1"></i> Xóa
                            </button>
                            <a href="#" class="btn btn-md btn-primary m-1">
                                <i class="fa fa-pen mr-1"></i> Chỉnh sửa
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<nav class="d-flex justify-content-center" aria-label="...">
    <ul class="pagination">
        {{#each this.pages}}
        {{#if active}}
        <li class="page-item active" aria-current="page">
            <a class="page-link" href="javascript:;">{{value}} <span class="sr-only">(current)</span></a>
        </li>
        {{else}}
        <li class="page-item">
            <a class="page-link" href="?page={{value}}">{{value}}</a>
        </li>
        {{/if}}
        {{/each}}
    </ul>
</nav>
{{else}}
<h6 class="text-center">Không có nhãn nào</h6>
{{/if}}