{{#section 'css'}}
<style>
    .mce-notification {
        display: none !important;
    }
</style>
{{/section}}
{{#section 'js'}}
<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: '#mytiny',
        height: 480,
        menubar: false,
        plugins: 'paste image link autolink lists media',
        toolbar: 'unredo | bold italic underline strikethrough | link image media pageembed',
    });
</script>
{{/section}}
<form method="POST" action="#">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4 shadow">
                    <div class="card-body">
                        <div class="form-group">
                            <input class="form-control font-weight-bold text-lg" type="text" name="post_title"
                                placeholder="Tiêu đề bài viết" required>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" type="text" name="post_summary" rows="4"
                                placeholder="Tóm tắt (tối đa 100 từ)"></textarea>
                        </div>
                        <div class="form-group">
                            <textarea id="mytiny" required></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <p class="font-weight-bold text-dark">Chuyên mục</p>
                        <div class="form-group">
                            <select class="custom-select" name="postcategory" required>
                                <option value="1">Thời sự</option>
                                <option value="2">Pháp Luật</option>
                                <option value="3">Thế giới</option>
                                <option value="4">Kinh doanh</option>
                                <option value="5">Công nghệ</option>
                                <option value="6">Thể thao</option>
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success text-white m-3">Đăng bản thảo</button>
                </div>
            </div>
        </div>
    </div>

</form>